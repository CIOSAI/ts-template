{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist",
    // "module": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "target": "es5",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": false,
    "removeComments": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitReturns": true,
    "traceResolution": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["./vendor/*", "./typings/*", "./assets/*", "./src/**/*"]
}
